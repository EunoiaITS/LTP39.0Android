<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.miller.parkingkoriv4">

    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.FLASHLIGHT" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BLUETOOTH" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@mipmap/app_ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@mipmap/app_ic_launcher_round"
        android:supportsRtl="true"
        android:testOnly="false"
        android:theme="@style/NoActionBar">

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.gms.vision.DEPENDENCIES"
            android:value="barcode" />

        <activity android:name="eis.example.miller.parkingkoriv4.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="eis.example.miller.parkingkoriv4.LoginActivity"
            android:theme="@style/NoActionBar" />
        <activity
            android:name="eis.example.miller.parkingkoriv4.DashboardActivity"
            android:theme="@style/NoActionBar" />
        <activity android:name="eis.example.miller.parkingkoriv4.CheckInActivity" />
        <activity android:name="eis.example.miller.parkingkoriv4.CheckOutActivity" />
        <activity android:name="eis.example.miller.parkingkoriv4.VipRegistrationActivity" />
        <activity android:name="eis.example.miller.parkingkoriv4.ScanVipBarcode" />
        <activity android:name="eis.example.miller.parkingkoriv4.QRScanActivity" />
        <activity android:name="eis.example.miller.parkingkoriv4.QRReader" />
    </application>

</manifest>